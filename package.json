{
  "name": "easy-git-annex",
  "version": "1.0.0",
  "description": "JavaScript/TypeScript API for git-annex and Git commands.",
  "main": "./dist/index.js",
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.0.0"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jstritch/easy-git-annex"
  },
  "keywords": [
    "git",
    "annex",
    "git-annex",
    "javascript",
    "typescript",
    "api"
  ],
  "author": "John Stritch <easy.git.annex@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/jstritch",
  "bugs": {
    "url": "https://github.com/jstritch/easy-git-annex/issues"
  },
  "homepage": "https://github.com/jstritch/easy-git-annex#readme",
  "scripts": {
    "build": "npx tsc",
    "lint": "npx eslint --ext .ts,.js,.json --ignore-path .gitignore .",
    "test": "npx jest",
    "test:badge": "npm run test:coverage && npx make-coverage-badge",
    "test:ci": "npx jest --testPathIgnorePatterns=/tests/commands-anx/",
    "test:coverage": "npx jest --collectCoverage",
    "typedoc": "npx typedoc && git checkout HEAD ./docs/_config.yml",
    "yalc": "yalc publish --push"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.9",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.9.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsonc": "^2.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.5.1",
    "make-coverage-badge": "^1.2.0",
    "ts-jest": "^27.1.3",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5"
  }
}
